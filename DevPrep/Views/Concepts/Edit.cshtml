@model DevPrep.Models.ViewModels.EditConceptViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>@Model.ConceptName </h4>
<hr />
<div>
    <div>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form">
                <div class="form-group">
                    <label asp-for="ConceptName" class="control-label">Concept Name</label>
                    <input asp-for="ConceptName" class="form-control" />
                    <span asp-validation-for="ConceptName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Description</label>
                    @for (var i = 0; i < Model.Descriptions.Count; i++)
                    {
                        <textarea asp-for="@Model.Descriptions[i].Paragraph" class="form-control"></textarea>
                        @*<input hidden asp-for="@Model.Descriptions[i].Id" class="form-control" />*@
                        <input hidden asp-for="@Model.Descriptions[i].ConceptId" class="form-control" />
                        <input hidden asp-for="@Model.Descriptions[i].ApplicationUserId" class="form-control" />




                    }
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Useful Links</label>
                @for (var i=0; i < Model.Links.Count; i++)
                {<div class="form-row">
                     <div class="col-sm">
                         <input asp-for="@Model.Links[i].Title" class="form-control" />
                         @*<input hidden asp-for="@Model.Links[i].Id" class="form-control" />*@
                         <input hidden asp-for="@Model.Links[i].ConceptId" class="form-control" />
                         <input hidden asp-for="@Model.Links[i].ApplicationUserId" class="form-control" />




                     </div>
                      <div class="col">
                    <input asp-for="@Model.Links[i].Link" class="form-control" />
                       </div>
                    </div>
               


        }
    </div>
            <div class="form-group">
                <input hidden asp-for="@Model.ConceptId" class="form-control" />

                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
