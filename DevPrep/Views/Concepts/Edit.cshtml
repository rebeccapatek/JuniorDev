@model DevPrep.Models.ViewModels.EditConceptViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditConceptViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConceptName" class="control-label"></label>
                <input asp-for="ConceptName" class="form-control" />
                <span asp-validation-for="ConceptName" class="text-danger"></span>
            </div>
            @foreach(var desc in Model.Descriptions)
            {
                <div class="form-group">
                    <textarea asp-for="@desc.Paragraph" class="form-control"></textarea>
                    
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
