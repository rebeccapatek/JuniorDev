@model DevPrep.Models.ViewModels.AddNewConceptwithDescriptionViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Add a New Concept for @Model.SoftwareLanguage.Name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConceptName" class="control-label">Concept Name</label>
                <input asp-for="ConceptName" class="form-control" />
                <span asp-validation-for="ConceptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConceptDescription" class="control-label">Description</label>
                <textarea asp-for="ConceptDescription" class="form-control"></textarea>
                <span asp-validation-for="ConceptDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
