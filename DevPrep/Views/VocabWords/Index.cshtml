@model IEnumerable<DevPrep.Models.VocabWord>

@{
    ViewData["Title"] = "Index";
}

<h1>Quiz Yourself With Flash Cards</h1>

<p>
    <a asp-action="Create">Add A New Card</a>
</p>
<section>
     
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">

            @foreach (var item in Model)
            {
                if (Model.First() == item)
                {<div class="carousel-item active">
                        <div class="d-block w-100">Word : @Html.DisplayFor(modelItem => item.Word)</div>
                    </div>}
                else
                { <div class="carousel-item">
                        <div class="d-block w-100">Word: @Html.DisplayFor(modelItem => item.Word)</div>
                    </div>
                }



                <div class="carousel-item">
                    <div class="d-block w-100">Definition: @Html.DisplayFor(modelItem => item.Definition)</div>
                    <div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </p>
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
   
        <script>
            $('.carousel').carousel(
                {
                    interval:false,
             
                });
        </script>
</section>

